{
  "name": "rpi-5inch-showcase",
  "version": "0.2.0",
  "description": "Beautiful 5-inch Raspberry Pi showcase PWA",
  "main": "public/index.html",
  "author": "hadefuwa",
  "license": "MIT",
  "scripts": {
    "start": "npx http-server public -p 3000 -o",
    "dev": "npx http-server public -p 3000 -o --cors --config scripts/http-server-config.json",
    "build": "node scripts/build.js",
    "build:clean": "rm -rf dist",
    "clean:build": "npm run build:clean && mkdir -p dist",
    "copy:assets": "cp -r public/assets dist/",
    "copy:styles": "echo 'Styles already copied from public/'",
    "copy:js": "echo 'JS already copied from public/'",
    "copy:screens": "echo 'Screens already copied from public/'",
    "copy:manifest": "cp public/manifest.json dist/",
    "copy:sw": "cp public/sw.js dist/",
    "copy:index": "cp public/index.html dist/",
    "serve": "npx http-server public -p 3000 --config scripts/http-server-config.json",
    "kiosk": "./scripts/kiosk.sh",
    "dev-fresh": "./scripts/dev-fresh.sh",
    "clear-cache": "./scripts/clear-all-caches.sh",
    "sync": "./scripts/sync-and-run.sh",
    "install-service": "./scripts/install-autostart.sh",
    "uninstall-service": "./scripts/uninstall-autostart.sh",
    "clean": "rm -rf node_modules package-lock.json",
    "reinstall": "npm run clean && npm install",
    "validate": "node scripts/validate-pwa.js",
    "fresh": "npx http-server public -p 3000 -c-1 --cors",
    "deploy": "npm run build && npm run copy:index"
  },
  "devDependencies": {
    "http-server": "^14.1.1"
  },
  "keywords": [
    "pwa",
    "raspberry-pi",
    "showcase",
    "touch",
    "games",
    "kiosk"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hadefuwa/rpi-5inch-showcase.git"
  }
}

